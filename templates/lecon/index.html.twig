{% extends 'base.html.twig' %}

{% block title %}Lecon index{% endblock %}

{% block body %}
    <h1>Lecon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lors de l'entrainement du</th>
                <th>Pour le tireur</th>
                <th>Par le maitre d'arme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecon in lecons %}
            <tr>
                <td>{{ lecon.id }}</td>
                <td>{{ lecon.entrainement.date|date('d-m-Y') }}</td>
                <td>{{ lecon.tireur.membre.prenom }} {{ lecon.tireur.membre.nom }}</td>
                <td>{{ lecon.entraineur.membre.prenom }} {{ lecon.entraineur.membre.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('lecon_show', {'id': lecon.id}) }}">show</a>
                    <a class="btn btn-info" href="{{ path('lecon_edit', {'id': lecon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('lecon_new') }}">Create new</a>
{% endblock %}
