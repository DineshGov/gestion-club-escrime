{% extends 'base.html.twig' %}

{% block title %}Presence index{% endblock %}

{% block body %}
    <h1>Presence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presence in presences %}
            <tr>
                <td>{{ presence.id }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('presence_show', {'id': presence.id}) }}">show</a>
                    <a class="btn btn-info" href="{{ path('presence_edit', {'id': presence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('presence_new') }}">Create new</a>
{% endblock %}
