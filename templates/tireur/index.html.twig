{% extends 'base.html.twig' %}

{% block title %}Tireur index{% endblock %}

{% block body %}
    <h1>Tireur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Blason</th>
                <th>NiveauSurclassement</th>
                <th>Arme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tireur in tireurs %}
            <tr>
                <td>{{ tireur.id }}</td>
                <td>{{ tireur.blason }}</td>
                <td>{{ tireur.niveauSurclassement }}</td>
                <td>
                    <ul>
                    {% for arme in tireur.armes %}
                        <ul>
                            <li>{{ arme.nom }}</li>
                            <li href="{{ path('arme_show', {'id': arme.id}) }}">show</li>
                            <li href="{{ path('arme_edit', {'id': arme.id}) }}">edit</li>
                        </ul>
                    {% else %}
                        <ul>
                            <li colspan="3">no records found</li>
                        </ul>
                    {% endfor %}
                    </ul>
                </td>

                <td>
                    <a href="{{ path('tireur_show', {'id': tireur.id}) }}">show</a>
                    <a href="{{ path('tireur_edit', {'id': tireur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tireur_new') }}">Create new</a>
{% endblock %}
