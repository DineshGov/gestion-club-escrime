{% block title %}Comp√©tition{% endblock %}

{% block body %}
    <h1 style="text-align: center;margin-top: 2%;margin-bottom: 2%">Competition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ competition.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ competition.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ competition.date ? competition.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ competition.ville }}</td>
            </tr>
            <tr>
                <th>Tireurs</th>
                <td>
                    <a class="btn btn-lg btn-info" href="{{ path('competition_tireurs', {'id': competition.id}) }}">Liste</a>
                </td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-lg btn-info" style="margin-top: 2%" href="{{ path('competition_index') }}">Retour</a>



    {#{{ include('competition/_delete_form.html.twig') }}#}
