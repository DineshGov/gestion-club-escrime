{% extends 'base.html.twig' %}

{% block title %}Competition{% endblock %}

{% block body %}
    <h1>Competition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ competition.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ competition.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ competition.date ? competition.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ competition.ville }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('competition_index') }}">back to list</a>

    <a href="{{ path('competition_edit', {'id': competition.id}) }}">edit</a>

    {{ include('competition/_delete_form.html.twig') }}
{% endblock %}
